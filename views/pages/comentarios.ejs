<div class="jumbotron text-center">
	<h1>Todos los comentarios</h1>
</div>

<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th class="text-center">Usuario</th>
			<th class="text-center">Comentario</th>
			<th class="text-center"><a href="/comentarios/create" class="btn btn-md btn-danger">Crear Comentario</a></th>
		</tr>
	</thead>
	<tbody>
		<% for (var comentario of comentarios){%>
			<tr>
				<td class="text-center"><%= comentario.username %></td>
				<td><%= comentario.comentario %></td>
				<td class="text-center">
					<a href="/comentario/<%= comentario._id%>" class="btn btn-sm btn-primary">View</a>
					<a href="/comentarios/<%= comentario.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
					<a href="/comentarios/<%= comentario._id%>/delete" class="btn btn-sm btn-danger">Delete</a>

				</td>
	<%}%>
	</tbody>
</table>