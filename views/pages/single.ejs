<div class="jumbotron text-center">
	<h1><%= comentario.username %></h1>
	<p><%= comentario.comentario %></p>
</div>
<div class="row">
	<table class="table table-bordered table-hover table-striped">
	<thead>
		<tr>
			<th class="text-center">Usuario</th>
			<th class="text-center">Comentario</th>
			<th ></th>
		</tr>
	</thead>
	<tbody>
		<% for (var comentarioId of comentario.comentarios){%>
			<tr>
				<td class="text-center"><%= comentarioId.username %></td>
				<td><%= comentarioId.comentario %></td>
				<td class="text-center">
					<a href="/comentario/<%= comentario._id%>" class="btn btn-sm btn-primary">View</a>
					<a href="/comentarios/<%= comentario.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
					<a href="/comentarios/<%= comentario._id%>/delete" class="btn btn-sm btn-danger">Delete</a>

				</td>
	<%}%>
	</tbody>
	</table>
</div>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form action="/comentarios/createsub/<%= comentario._id %>" method="POST">

            <div class="form-group">
                <label>Username</label>
                <input type="text" name="username" class="form-control">
            </div>

            <div class="form-group">
                <label>Comentario</label>
                <textarea name="comentario" rows="5" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg">Create</button>
            </div>

        </form>

    </div>
</div>